{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "module": "ESNext",
        "noImplicitAny": false,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"
      },
      "include": [
        "./src/**/*",
        "./main.ts"
      ]
  }